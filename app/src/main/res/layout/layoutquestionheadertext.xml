<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/google_deepPurple_500">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/google_deepPurple_300"
        android:orientation="vertical"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000"
                android:id="@+id/textView_question_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Question 1"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/textView_question_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="who is pm in india?"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
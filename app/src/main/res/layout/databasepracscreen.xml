<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pager"
    android:background="@color/google_deepPurple_500"
    android:padding="10dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >



    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button
        android:onClick="UA"
        android:id="@+id/etx1"
        android:layout_below="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="user_answer"
        />
    <TextView
        android:layout_below="@+id/etx1"
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button
        android:id="@+id/etx2"
        android:layout_below="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quizquestionotion"
        />
    <TextView
        android:layout_below="@+id/etx2"
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button
        android:id="@+id/etx3"
        android:layout_below="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="QUIZ"
        />
    <TextView
        android:layout_below="@+id/etx3"
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button
        android:id="@+id/etx4"
        android:layout_below="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="QUIZ_QUESTION"
        />



    <Button
        android:id="@+id/btn1"
        android:onClick="button"
        android:layout_below="@+id/etx4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"/>
    <Button
        android:id="@+id/btn2"
        android:onClick="dis"
        android:layout_below="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scorcard"/>
    <EditText
        android:id="@+id/etx5"
        android:layout_below="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />



    </RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_deepPurple_500">

    <RelativeLayout
android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/google_deepPurple_300"
            android:orientation="vertical"
            app:cardUseCompatPadding="true"
            app:contentPadding="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img"
                    android:src="@drawable/lo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <TextView
                    android:paddingTop="7dp"
                    android:background="@drawable/back4"
                    android:textColor="#000"
                    android:id="@+id/textView_question_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:text="SCORE CARD"
                    android:textSize="40sp" />

                <TextView
                    android:paddingTop="30dp"
                    android:id="@+id/textView_question_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCORE:"
                    android:textColor="#000"
                    android:textSize="26sp" />

                <TextView

                    android:id="@+id/textview_solution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:paddingRight="80dp"
                    android:layout_gravity="end"
                    android:textSize="75sp"
                    android:textColor="#000"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>